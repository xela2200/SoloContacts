@model ResetPasswordViewModel
<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div class="card-group">
                <div class="card p-4">
                    <div class="card-body">
                        <h1>Reset password</h1>
                        <p class="text-muted">Provide new password</p>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-user"></i>
                                    </span>
                                </div>
                                <input asp-for="Email" class="form-control flex-nowrap" required type="text" placeholder="Email">
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-lock"></i>
                                    </span>
                                </div>
                                <input asp-for="Password" class="form-control" required type="password" placeholder="Password">
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-lock"></i>
                                    </span>
                                </div>
                                <input asp-for="ConfirmPassword" class="form-control" required type="password" placeholder="Repeat password">
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <button class="btn btn-primary px-4" type="submit">Submit</button>
                            </div>
                            <div class="col-6 text-right">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>